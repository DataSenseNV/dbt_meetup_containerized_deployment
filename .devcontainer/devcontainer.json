{
    "name": "dbt meetup devcontainer",
    "dockerComposeFile": "compose.yml",
    "service": "dbt-postgres",
    "workspaceFolder": "/usr/app/dbt",
    "mounts": [
        "source=${localWorkspaceFolder},target=/usr/app/dbt,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "aaron-bond.better-comments",
                "adpyke.codesnap",
                "innoverio.vscode-dbt-power-user",
                "ms-python.python",
                "redhat.vscode-yaml",
                "samuelcolvin.jinjahtml",
                "streetsidesoftware.code-spell-checker",
                "VisualStudioExptTeam.vscodeintellicode",
                "ZainChen.json"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "postCreateCommand": "pip install jafgen && cd /tmp && jafgen 3 && mv /tmp/jaffle-data/*.csv /usr/app/dbt/seeds/ && cd /usr/app/dbt && dbt deps && dbt seed"
}